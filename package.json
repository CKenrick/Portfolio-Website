		"autoprefixer": "^10.4.21",
		"eslint": "^9.38.0",
		"eslint-plugin-react": "^7.37.5",
		"globals": "^16.4.0",
		"jsdom": "^27.0.1",
		"postcss": "^8.5.6",
		"sass": "^1.69.0",
		"sharp": "^0.34.4",
